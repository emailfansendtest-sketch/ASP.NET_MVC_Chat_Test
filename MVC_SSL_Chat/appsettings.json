{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "autoReload": false,
    "internalLogLevel": "Off",
    "variables": {
      "currentAppName": "",
      "commonLayout": "[${longdate:universalTime=true}Z] [${level:uppercase=true}] [${logger}] ${message} ${exception:format=tostring}"
    },
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "deleteOldFileOnStartup": false,
        "maxArchiveDays": "2",
        "filename": "${specialfolder:folder=CommonApplicationData}/.{var:currentAppName}/logs/Entry-${longdate:cached=true}.log",
        "layout": "${var:commonLayout}"
      },
      "logevent": {
        "type": "EventLog",
        "layout": "${var:commonLayout}",
        "machineName": ".",
        "source": "${var:currentAppName}",
        "eventId": "${event-properties:EventID:whenEmpty=0}",
        "log": "Application"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logfile"
      },
      {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "logevent"
      }
    ]
  },
  "SecretsLoader": {
    "ConsequentReadDelayMs": "1000"
  },
  "MessageStream": {
    "KeepAliveIntervalMs": "15000",
    "ReplayLookbackS": "86400"
  },
  "Persistence": {
    "FlushIntervalMs": "1000"
  },
  "MessageWriter": {
    "MessageQueueCapacity": "10000",
    "MessageBatchSize": "256"
  },
  "ChatEvent": {
    "SubscriberCapacity": "256"
  },
  "LocalizationFileName": "Localization.resx",
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ChatDbContextConnection": "Server=(localdb)\\mssqllocaldb;Database=MVC_SSL_Chat;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}